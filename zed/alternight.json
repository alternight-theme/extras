        // Foreground-related definitions
        "foreground": "#CAAEEB",
        "editor.foreground": "#CAAEEB",
        "border": "#352E40",
        "selection": "#525252",

        // Terminal-specific styles
        "terminal.background": "#1F172B",
        "terminal.foreground": "#CAAEEB",
        "terminal.bright_foreground": "#DAC6F1",
        "terminal.dim_foreground": "#BF9DE7",

        "syntax": {
