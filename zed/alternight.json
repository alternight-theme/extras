{
  "$schema": "https://zed.dev/schema/themes/v0.1.0.json",
  "name": "Alternight",
  "author": "Maurizio Paternina <io@m-pr.dev>",
  "themes": [
    {
      "name": "Alternight OG",
      "appearance": "dark",
      "style": {
        "background": "#1F172B",
        "panel.background": "#1F172B",
        "status_bar.background": "#1F172B",
        "surface.background": "#1F172B",
        "tab_bar.background": "#1F172B",
        // TODO: Define workaround, no border for tabs
        "tab.active_background": "#BC9BCF",
        //"tab.active_background": "#352E40",
        "tab.inactive_background": "#1F172B",
        "title_bar.background": "#1F172B",
        "toolbar.background": "#1F172B",
        "editor.active_line.background": "#352E40",
        "editor.active_line_number": "#D3BDE0",
        "editor.background": "#1F172B",
        "editor.gutter.background": "#1F172B",
        // TODO: Find ideal color
        "search.match_background": "#78767F",
